<launch>
  <arg name="rviz_on" default='rviz_off' />

  <arg name="urdf_file" default="$(find xacro)/xacro --inorder '$(find omo_r1mini_description)/urdf/r1mini.urdf.xacro'" />
  <param name="robot_description" command="$(arg urdf_file)" />
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find omo_r1mini_description)/rviz/model.rviz" if="$(eval rviz_on == 'rviz_on')" />
</launch>
